@model IEnumerable<ModelWeb.ViewModel.ViewCartDeltail>

@{
    ViewBag.Title = "ViewDetail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    Chi tiết đơn hàng
}
@section search{

}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ảnh</th>
                        <th>Tên</th>
                        <th>Giá</th>
                        <th>Số lượng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><img src="@Url.Content(item.Images )" with="100" height="150" /></td>
                            <td>@item.Name</td>
                            <td>@item.Price.GetValueOrDefault(0).ToString("N0") đ</td>
                            <td>@item.Quantity</td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>

</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>