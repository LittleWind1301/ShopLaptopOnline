@model List<LastProject_v2.Models.CartItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

@section jsFooter{
    <script src="~/Assets/js/controller/CartControllers - Copy.js"></script>
}
<div class="content">
    <div class="content_top">

        <div class="clear"></div>
    </div>
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã sản phẩm</td>
                        <td>Tên sản phẩm</td>
                        <td>Ảnh sản phẩm</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td>#</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.product.ID</td>
                            <td style="width:600px">@item.product.Name</td>
                            <td><img src="@item.product.Image" alt="@item.product.Name" /></td>
                            <td><input type="text" style="width:100px" class="quantity" value="@item.Quantity" data-id="@item.product.ID" /></td>
                            <td>@item.product.Price.GetValueOrDefault(0).ToString("N0") đ</td>
                            <td>@((item.product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0")) đ</td>
                            <td><a href="#" class="delete" data-id="@item.product.ID">Xóa</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <button id="btnContinue" class="btn">Tiếp tục mua hàng</button>
            <button id="btnUpdate" class="btn">Cập nhật giỏ hàng</button>
            <button id="btnDeleteAll" class="btn">Xóa giỏ hàng</button>
            <button id="btnPayment" class="btn">Thanh toán</button>

        }
        else
        {
            <span class="alert alert-danger">chưa có sản phẩm nào trong giỏ hàng</span>
        }
    </div>
</div>
